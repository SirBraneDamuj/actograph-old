<div class="container">
  <h1>Add a new title</h1>
  <%= link_to "Back", "/titles", :class => "btn btn-link" %>

  <h3>Add a movie</h3>
  <%= form_with(url: "/titles/create", method: "post", local: true) do %>
    <%= hidden_field_tag :type, "movie" %>
    <div class="form-row">
      <div class="col-7">
        <%= number_field_tag(:tmdb_id, nil, :placeholder => "Movie ID", :class => "form-control") %>
      </div>
      <div class="col-2">
        <%= label_tag "Watched?" %>
        <%= check_box_tag :watched, :watched, true %>
      </div>
      <div class="col-3">
        <%= submit_tag("Load", :class => "btn btn-primary") %>
      </div>
    </div>
  <% end %>

  <h3>Add a whole series</h3>
  <%= form_with(url: "/titles/create", method: "post", local: true) do %>
    <%= hidden_field_tag :type, "series" %>
    <div class="form-row">
      <div class="col-7">
        <%= number_field_tag(:tmdb_id, nil, :placeholder => "Series ID", :class => "form-control") %>
      </div>
      <div class="col-2">
        <%= label_tag "Watched?" %>
        <%= check_box_tag :watched, :watched, true %>
      </div>
      <div class="col-3">
        <%= submit_tag("Load", :class => "btn btn-primary") %>
      </div>
    </div>
  <% end %>
</div>
