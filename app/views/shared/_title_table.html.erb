<table class="table overflow-auto">
  <thead>
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Poster</th>
      <th>Status</th>
    </tr>
  </thead>
  <tbody>
    <% titles.each do |title| %>
      <tr>
        <td class="align-middle"><%= link_to title.tmdb_id, "#{type == "movie" ? "movies" : type}/#{title.tmdb_id}" %></td>
        <td class="align-middle"><%= title.name %></td>
        <td class="align-middle"><img src="<%= 'https://image.tmdb.org/t/p/w92' + title.poster_path %>" /></td>
      </tr>
    <% end %>
  </tbody>
</table>
